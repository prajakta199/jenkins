pipeline {
    agent any

    environment {
        BROWSERSTACK_USERNAME = credentials('BROWSERSTACK_USERNAME')
        BROWSERSTACK_ACCESS_KEY = credentials('BROWSERSTACK_ACCESS_KEY')
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run BrowserStack TurboScale Tests') {
            steps {
                sh 'npx browserstack-sdk'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed'
        }
    }
}
